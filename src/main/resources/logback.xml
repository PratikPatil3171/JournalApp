<configuration >


    <Appender name="myConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) %magenta([%thread]) %cyan(%logger{40}) %yellow(---) %msg%n
            </pattern>
        </encoder>
    </Appender>



    <Appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="myFileAppender">
        <file>
            journal.log
        </file>
        <rollingPolicy class = "ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>
                journalApp-%d{YY--MM--DD}.%i.log
<!--                Daily logging-->
            </fileNamePattern>
            <maxFileSize>
                10MB
            </maxFileSize>
            <maxHistory>
                10
            </maxHistory>


        </rollingPolicy>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) %magenta([%thread]) %cyan(%logger{40}) %yellow(---) %msg%n
            </pattern>
        </encoder>

    </Appender>

    <root level="INFO">
        <appender-ref ref="myConsoleAppender"/>
        <appender-ref ref="myFileAppender"/>

    </root>
</configuration>